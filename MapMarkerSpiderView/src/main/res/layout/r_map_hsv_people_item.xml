<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/material_padding_quarter">

    <TextView
        android:id="@+id/tv_top_user_name"
        style="@style/PrimaryTextStyle"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/material_padding_quarter"
        android:gravity="center_horizontal"
        android:maxLength="8"
        android:padding="2dp" />

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/user_image_size"
        android:layout_height="@dimen/user_image_size"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/white_shadow_bg"
        android:padding="1dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv_bottom_user_name"
        style="@style/PrimaryTextStyle"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/material_padding_quarter"
        android:gravity="center_horizontal"
        android:maxLength="8"
        android:padding="2dp"
        android:visibility="gone" />
</LinearLayout>